@{
    ViewBag.PageTitle = ViewBag.SubTitle + " | " + ViewBag.Title;
}
<div class="articles">

    @if (Model.Posts != null)
    {
        foreach (var post in Model.Posts)
        {
            <text>
                <div class="article">
                    <article>
                        <hroup>
                            <h1 class="page-header"><a href="/@post.Slug">@post.Title</a></h1>
                            <h3 class="meta">
                                <small> Written by @post.Author on @post.PublishedOn.ToLocalTime().ToString("d")</small>
                                <small><a href="/@post.Slug#disqus_thread" class="badge"></a></small>
                            </h3>
                        </hroup>
                        <div class="tags">
                            @foreach (var tag in post.Tags)
                            {
                                @: <span><a href="/tags/@tag">@tag.ToUpperInvariant()</a></span>
                            }
                        </div>
                        <div class="content">
                            @Html.Raw(post.Content)
                        </div>
                    </article>
                </div>
            </text>
        }
    }
</div>
@section footer {
    @Disqus.Render(null)
}
