@{
    ViewBag.PageTitle = ViewBag.Title;
}
<div class="row">
    <div class="articles">
        @foreach (var post in Model.Posts)
        {
            <div class="article">
                <article>
                    <hgroup>
                        <h1 class="page-header">
                            <a href="/@post.Slug">@post.Title</a>
                        </h1>
                        <h3 class="meta">
                            <small> Written by @post.Author on @post.PublishedOn.ToLocalTime().ToString("d")</small>
                            <small>
                                <a href="/@post.Slug#disqus_thread" data-disqus-identifier="@post.Id" class="badge"></a>
                            </small>
                        </h3>
                    </hgroup>
                    <div class="tags">
                        @foreach (var tag in post.Tags)
                        {
                            @: <span><a href="/tags/@tag">@tag.ToUpperInvariant()</a></span>
                        }
                    </div>
                    <div class="content">
                        @Html.Raw(post.Content)
                    </div>
                </article>
            </div>
        }
    </div>
    <div class="right-side">
        @await Component.InvokeAsync("History")
    </div>
</div>
@section footer {
    @Disqus.Render(null)
}